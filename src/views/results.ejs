<!DOCTYPE html>
<html lang="pt-br">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados da sua busca'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<%if(product.length > 0){%>
			<div class="col-12">
				<h2 class="products-title">Resultados da sua busca: <%=product.length%></h2>
			</div>
			<%product.forEach(product=>{
				let finalPrice = (product.price*(100 - product.discount)/100)
			%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%=product.id%>">
							<figure class="product-box_image">
								<img src="/images/products/<%=product.image%>" alt="imagem do produto">
							</figure>
							<article class="product-box_data">
								<%if(product.discount > 0){%>
									<h2>R$ <%=toThousand(finalPrice)%></h2>
									<span><%=product.discount%> % OFF</span>
									<p><%=product.name%></p>
								<%}else{%>
									<h2>R$ <%=product.price%></h2>
									<p><%=product.name%></p>
								<%}%>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<%})%>
		<%}else{%>
			<div class="col-12">
				<h2 class="products-title" style="color: tomato;">Não há produtos que correspondam a esta pesquisa</h2>
			</div>
		<%}%>
		</div>
	</div>
	<!-- /todos os produtos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>