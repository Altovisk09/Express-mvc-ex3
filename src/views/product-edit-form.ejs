<!DOCTYPE html>
<html lang="pt-br">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' + product.name}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>

	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Você está editando: <i><%=product.name%></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/edit/<%=product.id%>" method="post">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Produto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Chinelos Reebok" class="form-input" value="<%=product.name%>">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Preço do produto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%=product.price%>">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Desconto:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input" value="<%=product.discount%>">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoria:</label>
						<select name="category" id="category" class="form-input" >
							<% let category = (product.category === "in-sale") ? "Em oferta" : "Últimos adicionados"; %>
							<% let categoryValue = (product.category === "visited") ? "visited" : "in-sale"; %>
							<option value="<%=categoryValue%>" hidden><%=category%></option>
							<option value="in-sale">Em oferta</option>
							<option value="visited" >Últimos adicionados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descrição:</label>
						<textarea name="description" id="description" class="form-input"><%= product.description %></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Salvar produto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos os produtos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>